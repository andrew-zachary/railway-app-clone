---

import Logo from "../assets/logo.astro";

const { homePageLink } = Astro.props;

---
<style lang="scss">

    a {
        
        span {
            @include withRtl(margin, 0 0 0 1.6rem, 0 1.6rem 0 0);
        }
    }

</style>
<a class="flex items-center" href={homePageLink}>
    <div class="max-w-[2.4rem] md:max-w-[3.2rem]">
        <Logo />
    </div>
    <span class="text-sm font-bold capitalize">railway</span>
</a>