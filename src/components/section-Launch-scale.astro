---

import ShapeBlocks from "../assets/shape-blocks.astro";
import ShapeArrows from "../assets/shape-arrows.astro";
import ShapeLock from "../assets/shape-lock.astro";
import ShapeMetrics from "../assets/shape-metrics.astro";
import ShapeCheck from "../assets/shape-check.astro";
import ShapeArrowTop from "../assets/shape-arrow-top.astro";
import ShapeSupport from "../assets/shape-support.astro";

import CommonCircleNumber from "./common-circle-number.astro";
import CommonListItemBox from "./common-list-item-box.astro";

---
<section id="launch-scale"
    class="relative max-w-screen-xlg mx-auto"
>

    <div class="-mx-[2rem] md:-mx-[3.2rem] mt-[-6.4rem]">

        <CommonCircleNumber borderColor="border-blue-2" textColor="text-blue-2" marginB="mb-[6.8rem]">3</CommonCircleNumber>
        <slot name="topHeader"></slot>
        <slot name="header"></slot>
        <hr class="w-[16rem] mx-auto my-[2.4rem] border-ternary" />
        <slot name="subHeader"></slot>
        <div 
            id="bigTrainContainer"
            class="w-screen h-full
            absolute left-[50%] top-[50%] -z-10
            -translate-x-[50%] -translate-y-[50%]
            flex items-center justify-center overflow-hidden"
        >
            <div id="bigTrain" class="w-full">
                <img src="/big-train.svg" alt="">
            </div>
        </div>
        <div id="launch-scale-box" class="relative z-20 w-full mt-[9.6rem] pb-[14.4rem] px-[2rem]
            grid grid-cols-1
            md:grid-cols-12 gap-[3.2rem]
            lg:px-[9.6rem]"
        >
            <ul class="to-reveal launch-scale-lists md:col-span-4">
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">Autoscaling</span>
                    <span slot="desc">Railway scales apps to meet user demand, automagically, based on load.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeArrows slot="icon" />
                </CommonListItemBox>
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">Production-ready</span>
                    <span slot="desc">Railway runs on Railway, join us and others serving requests at web scale.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeLock slot="icon" />
                </CommonListItemBox>
            </ul>
            <ul class="to-reveal launch-scale-lists md:col-span-4">
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">Safe and Sound</span>
                    <span slot="desc">A secure mission control, without the policy headache. Permissions, 2FA, and more.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeMetrics slot="icon" />
                </CommonListItemBox>
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">+99% Uptime</span>
                    <span slot="desc">Applications stay on the grid with high availability and high uptime guarantees.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeCheck slot="icon" />
                </CommonListItemBox>
            </ul>
            <ul class="to-reveal launch-scale-lists md:col-span-4">
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">Usage Metrics</span>
                    <span slot="desc">Real-time metrics to debug issues. Slow query added? Weâ€™ll show you exactly where.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeArrowTop slot="icon" />
                </CommonListItemBox>
                <CommonListItemBox
                    shadowType="shadow-type-1" 
                    boxBorder="border-2 border-blue-1 rounded-lg"
                    boxBg="bg-primary"
                    circleStyle="border-2 border-blue-2 rounded-full bg-primary"
                    headerTxtColor="text-blue-3"
                    paraTxtColor="text-white"
                >
                    <span slot="header">Supreme Support</span>
                    <span slot="desc">Overcome any challenge with a supporting team ready to respond.</span>
                    <ShapeBlocks slot="blocks" blocksColor="stroke-blue-1" />
                    <ShapeSupport slot="icon" />
                </CommonListItemBox>
            </ul>
        </div>

    </div>

</section>