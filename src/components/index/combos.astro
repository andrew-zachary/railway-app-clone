<style lang="scss">
    #combos {
        padding-bottom: 4rem;
        header {
            padding-top: 4.5rem;
            h1 {
                font-size: 8rem;
            }
            h2 {
                font-size: 2.5rem;
                line-height: 3rem;
            }
        }
        & > div {
            ul {
                padding: 3rem 0;
                li {
                    padding: 0 1rem;
                    .slide-content {
                        padding: 5rem 0;
                        border-radius: 5rem;
                        h1 {
                            font-size: 1.9rem;
                        }
                        .combo-name {
                            font-size: 1.7rem;
                            padding-top: 3rem;
                        }
                        ul {
                            font-size: 1.7rem;
                            padding-top: 2rem;
                        }
                        .combo-desserts {
                            padding-top: 3rem;
                            font-size: 1.7rem;
                        }
                        .combo-price {
                            padding-top: 2rem;
                            font-size: 1.7rem;
                        }
                    }
                }
            }
        }
        .swiper-button-prev::after, .swiper-button-next::after {
            color: $quaternary-color;
        }
        //prev-next away from the edge
        .swiper-button-prev {
            left: 2rem
        }
        .swiper-button-next {
            right: 2rem
        }
        //prev-next appear beneath the swiper
        @media screen and (max-width: 768px){
            padding-bottom: 15rem;
            .swiper-button-prev {
                left: 10rem
            }
            .swiper-button-next {
                right: 10rem
            }
            .swiper-button-prev, .swiper-button-next {   
                top: 110%;
            }
        }
        .combo-swiper {
            margin-top: 5rem;
            @media screen and (min-width: 320px){
                width: 32rem;
            }
            @media screen and (min-width: 1024px){
                width: calc((32rem * 2) + 5.2rem);
            }
            @media screen and (min-width: 1200px){
                width: 100%;
            }
        }
    }
</style>