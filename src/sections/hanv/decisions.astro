<section id="decisions" class="relative bg-black text-white pb-48 p-8">
    <div id="decisions-box" class="max-w-screen-xlg mx-auto">
        <div class="img-box text-center mt-20">
            <img class="inline-block w-full" src="/images/inv/smarter.png" alt="">
        </div>
        <article class="mt-20 relative z-20">
            <div id="phone" class="img-box text-center">
                <img class="inline-block w-full" src="/images/inv/phone.png" alt="">
            </div>
            <div id="decision-1" class="mt-14 text-center">
                <h1 class="font-bold">01</h1>
                <p>Start by deciding what milestones and your goals in completing this course so we can help you jumpstart and personalize it</p>
            </div>
            <div id="decision-2" class="mt-14 text-center">
                <h1 class="font-bold">02</h1>
                <p>Start by deciding what milestones and your goals in completing this course so we can help you jumpstart and personalize it</p>
            </div>
        </article>
        <div id="floor" class="absolute bottom-0 left-0 z-10 w-full"></div>
    </div>
</section>
<style lang="scss" is:global>
    #decisions {

        article {

            h1 {
                font-size: 6.5rem;
            }

            p {
                font-size: 1.5rem;
            }
        }

        @media screen and (min-width: 768px) {
            padding-top: 12rem;
            
            article {
                display: grid;
                grid-template-columns: repeat(3, 1fr);

                #phone {
                    grid-column: 2 / 3;
                    grid-row: 1 / 2;
                }

                #decision-1 {
                    grid-column: 1 / 2;
                    grid-row: 1 / 2;
                }
            }

            #floor {
                bottom: 0;
                left: 0;
                height: 24.7rem;
                background: url(/images/inv/wave-white.png) center bottom no-repeat;
            }
        }
    }
</style>