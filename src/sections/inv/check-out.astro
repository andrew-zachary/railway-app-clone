<style lang="scss" is:global>
    #check-out {

        header {

            h2 {
                font-size: 3rem;
            }

            h1 {
                font-size: 6.5rem;
            }

            h3 {
                font-size: 1.5rem;
            }
        }

        #classes-list-cards {
            display: grid;
            grid-template-columns: 50rem;
            gap: 5rem 0;
            justify-content: center;

            .card {
                height: calc(28.6rem + 1.5rem);
                display: grid;
                grid-template-columns: 20rem 1fr;

                .card-img {
                    padding: 5rem 2rem 0 2rem;
                    background: url(/images/inv/wave-side.png) right top no-repeat;
                    background-size: 120%;
                }

                .card-desc {

                    h1 {
                        font-size: 3rem;
                    }

                    h2 {
                        font-size: 1.5rem;
                    }

                    .enroll-now {
                        font-size: 2rem;
                    }
                }
            }
        }

        @media screen and (min-width: 992px) {
            
            #classes-list-cards {
                grid-template-columns: repeat(2, 45rem);
                gap: 5rem 3rem;
            }
        }

        @media screen and (min-width: 1200px) {
            
            #classes-list-cards {
                grid-template-columns: repeat(2, 55rem);
                gap: 5rem 5rem;
            }
        }
    }
</style>