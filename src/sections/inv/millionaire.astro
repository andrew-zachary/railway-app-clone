---
import Btn from "../../components/inv/btn.astro";
---
<section id="millionaire" class="relative overflow-hidden text-center capitalize pt-48 px-8">
    <div id="millionaire-box" class="max-w-screen-xlg mx-auto relative z-20">
        <div id="making">
            <div class="img-box">
                <img class="inline-block" src="/images/inv/the-making-of.png" alt="">
            </div>
            <ul>
                <li class="mt-16">
                    <div class="img-box">
                        <img class="inline-block" src="/images/inv/chart-2.png" alt="">
                    </div>
                    <p class="mt-8">make your investment journey easier by learning the basics with hanvesting.</p>
                </li>
                <li class="mt-16">
                    <div class="img-box">
                        <img class="inline-block" src="/images/inv/hand-with-arrow.png" alt="">
                    </div>
                    <p class="mt-8">make your investment journey easier by learning the basics with hanvesting.</p>
                </li>
                <li class="mt-16">
                    <div class="img-box">
                        <img class="inline-block" src="/images/inv/chart.png" alt="">
                    </div>
                    <p class="mt-8">make your investment journey easier by learning the basics with hanvesting.</p>
                </li>
            </ul>
            <Btn styles="text-white bg-inv-primary-color mt-16 try-for" text="try for 15 days" />
        </div>
        <div id="app-snapshot-2" class="img-box pt-16 pb-32">
            <img class="inline-block px-6" src="/images/inv/woman-with-phone.png" alt="">
        </div>
    </div>
    <div id="floor" class="absolute bottom-0 left-0 z-10 w-full"></div>
</section>
<style lang="scss" is:global>
    #millionaire {

        ul {
            
            p {
                font-size: 1.5rem;
            }
        }

        .try-for {
            font-size: 2rem;
        }

        #floor {
            height: 20rem;
            background: url(/images/inv/wave-dark.png) center bottom no-repeat;
            transform: rotate(180deg);
        }

        @media screen and (min-width: 992px) {
            
            #millionaire-box {
                display: grid;
                grid-template-columns: max-content 1fr;

                #making {

                    ul {
                        display: grid;
                        grid-template-columns: repeat(3, minmax(0, 20rem));
                        gap: 0 2rem;
                    }
                }
            }

            #floor {
                background-position-x: right;
                left: 25%;
            }
        }
    }
</style>