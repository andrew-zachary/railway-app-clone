---

import Nav from "../layout/Nav.astro";

const { title, lang } = Astro.props;

---
<style lang="scss" is:global>

    :root {
        --blue-track: linear-gradient(0deg, rgb(255 255 255/0) 0%, hsla(220, 62%, 25%, .5) 15%, hsla(220, 62%, 25%, .5) 85%, rgb(255 255 255/0) 100%);
        --green-track: linear-gradient(0deg, rgb(255 255 255/0) 0%, hsla(150, 60%, 13%, .5) 15%, hsla(150, 60%, 13%, .5) 85%, rgb(255 255 255/0) 100%);
    }

    html {
        font-size: 62.5%;
        line-height: 1.25;
    }

    html, body {
        height: 100%;
    }

    .font-robo {
        @include withRtl('font-family', 'Roboto', 'Tajawal');
    }

    .font-robo-reversed {
        @include withRtl('font-family', 'Tajawal', 'Roboto');
    }

</style>
<script>

    import loader from "../js/loader.js";

    loader();

</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&family=Tajawal:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body id={title} class="bg-primary font-robo text-white" x-data="moveTrains" @scroll.window="scrolling">

    <Nav lang={lang} />

    <slot></slot>

</body>
</html>